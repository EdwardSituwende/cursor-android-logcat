{
  "name": "cursor-android-logcat",
  "displayName": "Android Logcat (Cursor)",
  "description": "Minimal Android Logcat panel integrated with your cli_logcat.sh",
  "version": "1.0.23",
  "publisher": "edward-local",
  "repository": {
    "type": "git",
    "url": "https://example.com/edward-local/cursor-android-logcat.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:android-logcat-view",
    "onCommand:cursorAndroidLogcat.start",
    "onCommand:cursorAndroidLogcat.stop",
    "onCommand:cursorAndroidLogcat.refreshDevices"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "android-logcat-panel",
          "title": "android logcat",
          "icon": "media/android.svg"
        }
      ]
    },
    "views": {
      "android-logcat-panel": [
        {
          "type": "webview",
          "id": "android-logcat-view",
          "name": "Android Logcat",
          "retainContextWhenHidden": true
        }
      ]
    },
    "commands": [
      {
        "command": "cursorAndroidLogcat.start",
        "title": "Android Logcat: Start"
      },
      {
        "command": "cursorAndroidLogcat.stop",
        "title": "Android Logcat: Stop"
      },
      {
        "command": "cursorAndroidLogcat.refreshDevices",
        "title": "Android Logcat: Refresh Devices"
      }
    ],
    "configuration": {
      "title": "Android Logcat (Cursor)",
      "properties": {
        "cursorAndroidLogcat.scriptPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to cli_logcat.sh"
        },
        "cursorAndroidLogcat.debug": {
          "type": "boolean",
          "default": true,
          "description": "Enable debug logs in status bar and console"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "vscode:prepublish": "node ./scripts/bump-version-and-prepare.mjs && nohup node ./scripts/move-vsix-once.mjs >/dev/null 2>&1 & npm run compile",
    "package": "npm run compile && npx --yes @vscode/vsce package && node ./scripts/move-vsix-once.mjs"
  },
  "devDependencies": {
    "@types/node": "^18.19.123",
    "@types/vscode": "^1.99.0",
    "typescript": "^5.9.2"
  }
}
